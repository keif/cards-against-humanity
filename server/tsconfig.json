{
  "plugins": [
    "@typescript-eslint",
    "react-hooks"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es5",
      "es6",
      "es7",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
  },
  "include": [
    "src",
    "./src/**/*",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.*",
    "**/__mocks__/*.tsx",
    "**/mocks.tsx",
    "**/test.*",
    "vitest.config.ts"
  ]
}
