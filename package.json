{
  "name": "phucking-cards",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm --filter pc_api dev\" \"pnpm --filter pc_ui dev\"",
    "build": "pnpm --recursive run build",
    "dev:client": "pnpm --filter pc_ui dev",
    "dev:server": "pnpm --filter pc_api dev",
    "lint": "pnpm --filter pc_ui lint && pnpm --filter pc_api lint",
    "build:client": "pnpm --filter pc_ui build",
    "build:server": "pnpm --filter pc_api build",
    "test": "pnpm test:client && pnpm test:server",
    "test:client": "pnpm --filter pc_ui test",
    "test:server": "pnpm --filter pc_api test",
    "clear-cards": "./scripts/clear-redis-cards.sh"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
