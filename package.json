{
  "name": "cards-against-humanity",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm --filter cah_backend dev\" \"pnpm --filter cah_frontend dev\"",
    "build": "pnpm --recursive run build",
    "dev:client": "pnpm --filter cah_frontend dev",
    "dev:server": "pnpm --filter cah_backend dev",
    "build:client": "pnpm --filter cah_frontend build",
    "build:server": "pnpm --filter cah_backend build",
    "test": "pnpm test:client && pnpm test:server",
    "test:client": "pnpm --filter cah_frontend test",
    "test:server": "pnpm --filter cah_backend test"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}